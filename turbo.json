{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [ "**/.env.*local", "**/.env", "tsconfig.json" ],
  "globalDotEnv": [ ".env" ],
  "pipeline": {
    "build": {
      "dependsOn": [ "^build" ],
      "outputs": [ ".next/**", "!.next/cache/**" ],
      "dotEnv": [
        ".env.production.local",
        ".env.local",
        ".env.production",
        ".env"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dotEnv": [
        ".env.development.local",
        ".env.local",
        ".env.development",
        ".env"
      ]
    },
    "db:push": {
      "cache": false,
      "dotEnv": [
        ".env.development.local",
        ".env.local",
        ".env.development",
        ".env"
      ]
    },
    "lint": { }
  }
}
